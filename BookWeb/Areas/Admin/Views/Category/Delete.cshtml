@model Category

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class=" row pb-3">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>


        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name"disabled class="form-control">
          
        </div>
        <div class="mb-3">
            <label asp-for="DisplyOrder">Dispaly Order</label>
            <input asp-for="DisplyOrder"disabled class="form-control">
         
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px"><i class="bi bi-trash3"></i>&nbsp;Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-warning" style="width:150px"><i class="bi bi-backspace"></i>&nbsp;Back to Index</a>
    </div>

</form>

@section Scripts{
    @{
        <Partial name="_ValidationScriptsPartial" />
    }
}