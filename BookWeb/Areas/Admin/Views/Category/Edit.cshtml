@model Category

<form method="post" asp-action="Edit">

    <div class="border p-3 mt-4">
        <div class=" row pb-3">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>


        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplyOrder">Dispaly Order</label>
            <input asp-for="DisplyOrder" class="form-control">
            <span asp-validation-for="DisplyOrder" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px"><i class="bi bi-plus-circle"></i>&nbsp;Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-warning" style="width:150px"><i class="bi bi-backspace"></i>&nbsp;Back to Index</a>
    </div>

</form>

@section Scripts{
    @{
        <Partial name="_ValidationScriptsPartial" />
    }
}